@{
  Layout = "_Layout";
}

@using TvShow.Models;
@model List<TvShow.Models.Genre>;

<h1>Genres</h1>

@if (Model.Count == 0)
{
  <p>No Generes yet! Please add a genre</p>
}

<ul class="list">
  @foreach(Genre genre in Model)
  {
    <li>@Html.ActionLink($"{genre.GenreType}", "Details", new{ id = genre.GenreId}) </li>
  }
</ul>

<p>@Html.ActionLink("Add a Genre", "Create")</p>
<br>
<img src="~/img/fruits.gif" alt="fruits basket gif">